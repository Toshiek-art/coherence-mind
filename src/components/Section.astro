---
const { title, description, layout = 'grid' } = Astro.props;
const layoutClass = layout === 'grid' ? 'grid gap-8 md:grid-cols-2' : 'space-y-6';
---
<section class="py-16">
  <div class="container space-y-8">
    <header class="max-w-3xl space-y-3">
      <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">{title}</h2>
      {description && <p class="text-slate-600 dark:text-slate-300">{description}</p>}
    </header>
    <div class={layoutClass}>
      <slot />
    </div>
  </div>
</section>
