---
import type { NavigationLink } from '../lib/types';

const fallback = [
  { _id: 'model', label: 'Model', href: '/model', order: 1 },
  { _id: 'glossary', label: 'Glossary', href: '/glossary', order: 2 },
  { _id: 'timeline', label: 'Timeline', href: '/timeline', order: 3 },
  { _id: 'blog', label: 'Articles', href: '/blog', order: 4 }
] satisfies NavigationLink[];

const {
  links = [] as NavigationLink[],
  layout = 'inline'
} = Astro.props;

const navItems: NavigationLink[] = links.length ? links : fallback;
const listClass =
  layout === 'inline'
    ? 'flex flex-wrap gap-4 text-sm uppercase tracking-widest text-slate-600 dark:text-slate-300'
    : 'flex flex-col gap-2 text-base font-medium text-slate-900 dark:text-slate-50';
const linkClass =
  layout === 'inline'
    ? 'transition hover:text-slate-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-500 dark:hover:text-slate-50'
    : 'block rounded-xl px-3 py-2 text-slate-900 transition hover:bg-slate-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-500 dark:text-white dark:hover:bg-white/10';
---
<nav aria-label="Primary">
  <ul class={listClass}>
    {navItems.map((link) => (
      <li>
        <a
          class={linkClass}
          href={link.href}
        >
          {link.label}
        </a>
      </li>
    ))}
  </ul>
</nav>
