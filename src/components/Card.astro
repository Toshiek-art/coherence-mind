---
import Tag from './Tag.astro';
const { title, href = '#', meta, excerpt, tags = [] } = Astro.props;
---
<article class="flex flex-col justify-between rounded-2xl border border-white/10 bg-white/5 p-6 shadow-depth">
  <div class="space-y-3">
    {meta && <p class="text-xs uppercase tracking-[0.3em] text-accent">{meta}</p>}
    <h3 class="text-xl font-semibold">
      <a class="hover:text-accent" href={href}>{title}</a>
    </h3>
    {excerpt && <p class="text-white/70">{excerpt}</p>}
  </div>
  {tags.length > 0 && (
    <div class="mt-6 flex flex-wrap gap-2">
      {tags.map((tag: string) => (
        <Tag label={tag} />
      ))}
    </div>
  )}
</article>
