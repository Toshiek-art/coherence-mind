---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageTitle from '../components/PageTitle.astro';

const seo = {
  title: 'Papers — CoherenceMind',
  description: 'Citable publications and preprints connected to the Reflexive Coherence Model.'
};

const primaryPaper = {
  title: 'The Reflexive Coherence Model: A Physico-Informational Framework for Consciousness',
  doi: '10.5281/zenodo.17342603',
  doiUrl: 'https://doi.org/10.5281/zenodo.17342603',
  year: '2025',
  venue: 'Zenodo (preprint)',
  licenseLabel: 'CC BY-NC-ND 4.0',
  licenseNote: 'Attribution required · NonCommercial · NoDerivatives',
  // Se non hai ancora il PDF sul sito, metti null e il bottone sparisce.
  pdfUrl: '/papers/rcm-v1.1.pdf'
};

const expansionPaper = {
  title: 'The Expansion Hypothesis: Dynamical Regimes of Reflexive Coherence',
  doi: '10.5281/zenodo.18045464',
  doiUrl: 'https://doi.org/10.5281/zenodo.18045464',
  year: '2025',
  venue: 'Zenodo (preprint)',
  licenseLabel: 'CC BY-NC-ND 4.0',
  licenseNote: 'Attribution required · NonCommercial · NoDerivatives',
  pdfUrl: '/papers/teh-v1.1.pdf'
};
---

<BaseLayout seo={seo}>
  <PageTitle
    eyebrow="publications"
    title="Papers & Preprints"
    intro="Citable publications, versioned resources, and primary references for the Reflexive Coherence Model."
  />

  <section class="pb-20">
    <div class="container">
      <div class="grid gap-10 lg:grid-cols-[1.2fr_0.8fr]">
        {/* Main column */}
        <div class="space-y-6">
          {/* Primary paper card */}
          <div class="rounded-3xl border border-slate-200 bg-white/60 p-6 shadow-sm backdrop-blur dark:border-white/10 dark:bg-white/5">
            <div class="flex flex-wrap items-start justify-between gap-4">
              <div class="max-w-2xl">
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-600 dark:text-white/60">
                  Primary reference · {primaryPaper.venue}
                </p>
                <h2 class="mt-2 text-xl font-semibold text-slate-900 dark:text-white">
                  {primaryPaper.title}
                </h2>
                <p class="mt-2 text-sm text-slate-600 dark:text-white/70">
                  DOI:{' '}
                  <a
                    href={primaryPaper.doiUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="underline decoration-slate-400 underline-offset-2 hover:decoration-slate-700 dark:decoration-white/30 dark:hover:decoration-white/60"
                  >
                    {primaryPaper.doi}
                  </a>
                </p>
              </div>

              <div class="flex flex-col items-start gap-2">
                <span class="rounded-full border border-slate-200 bg-white/70 px-3 py-1 text-xs font-semibold text-slate-700 dark:border-white/10 dark:bg-white/10 dark:text-white/80">
                  {primaryPaper.licenseLabel}
                </span>
                <p class="text-xs text-slate-500 dark:text-white/50">
                  {primaryPaper.licenseNote}
                </p>
              </div>
            </div>

            <div class="mt-5 flex flex-wrap gap-4 text-sm">
              <a
                href={primaryPaper.doiUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="link-accent font-semibold"
              >
                Read on Zenodo →
              </a>

              {primaryPaper.pdfUrl ? (
                <a href={primaryPaper.pdfUrl} class="link-accent font-semibold">
                  Open PDF →
                </a>
              ) : null}
            </div>
          </div>

          {/* Expansion hypothesis card */}
          <div class="rounded-3xl border border-slate-200 bg-white/60 p-6 shadow-sm backdrop-blur dark:border-white/10 dark:bg-white/5">
            <div class="flex flex-wrap items-start justify-between gap-4">
              <div class="max-w-2xl">
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-600 dark:text-white/60">
                  Extension · {expansionPaper.venue}
                </p>
                <h2 class="mt-2 text-xl font-semibold text-slate-900 dark:text-white">
                  {expansionPaper.title}
                </h2>
                <p class="mt-2 text-sm text-slate-600 dark:text-white/70">
                  DOI:{' '}
                  <a
                    href={expansionPaper.doiUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="underline decoration-slate-400 underline-offset-2 hover:decoration-slate-700 dark:decoration-white/30 dark:hover:decoration-white/60"
                  >
                    {expansionPaper.doi}
                  </a>
                </p>
              </div>

              <div class="flex flex-col items-start gap-2">
                <span class="rounded-full border border-slate-200 bg-white/70 px-3 py-1 text-xs font-semibold text-slate-700 dark:border-white/10 dark:bg-white/10 dark:text-white/80">
                  {expansionPaper.licenseLabel}
                </span>
                <p class="text-xs text-slate-500 dark:text-white/50">
                  {expansionPaper.licenseNote}
                </p>
              </div>
            </div>

            <div class="mt-5 flex flex-wrap gap-4 text-sm">
              <a
                href={expansionPaper.doiUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="link-accent font-semibold"
              >
                Read on Zenodo →
              </a>

              {expansionPaper.pdfUrl ? (
                <a href={expansionPaper.pdfUrl} class="link-accent font-semibold">
                  Open PDF →
                </a>
              ) : null}
            </div>
          </div>

          {/* How to cite */}
          <div class="rounded-3xl border border-slate-200 bg-white/50 p-6 shadow-sm backdrop-blur dark:border-white/10 dark:bg-white/5">
            <h3 class="text-base font-semibold text-slate-900 dark:text-white">How to cite</h3>
            <p class="mt-2 text-sm text-slate-600 dark:text-white/70">
              Use the Zenodo record for the authoritative citation. A minimal citation format:
            </p>

            <div class="mt-4 rounded-2xl border border-slate-200 bg-white/70 p-4 text-sm text-slate-700 dark:border-white/10 dark:bg-white/10 dark:text-white/80">
              Malasomma, A. G. ({primaryPaper.year}). <em>{primaryPaper.title}</em>. Zenodo. DOI:{' '}
              {primaryPaper.doi}
            </div>

            <div class="mt-3 rounded-2xl border border-slate-200 bg-white/70 p-4 text-sm text-slate-700 dark:border-white/10 dark:bg-white/10 dark:text-white/80">
              Malasomma, A. G. ({expansionPaper.year}). <em>{expansionPaper.title}</em>. Zenodo. DOI:{' '}
              {expansionPaper.doi}
            </div>
          </div>

          {/* Versioning / status */}
          <div class="rounded-3xl border border-slate-200 bg-white/50 p-6 shadow-sm backdrop-blur dark:border-white/10 dark:bg-white/5">
            <h3 class="text-base font-semibold text-slate-900 dark:text-white">Versioning & status</h3>
            <ul class="mt-3 list-disc space-y-2 pl-5 text-sm text-slate-600 dark:text-white/70">
              <li>
                The Zenodo record is the stable reference point for citation and archival access.
              </li>
              <li>
                Website pages (Model, Glossary, Notes) may evolve faster than the formal paper and should be treated as living material.
              </li>
              <li>
                When a new paper version is released, the Zenodo entry will reflect the updated record and PDF.
              </li>
            </ul>
          </div>
        </div>

        {/* Side column */}
        <aside class="space-y-4">
          <div class="rounded-3xl border border-slate-200 bg-white/50 p-6 shadow-sm backdrop-blur dark:border-white/10 dark:bg-white/5">
            <h3 class="text-base font-semibold text-slate-900 dark:text-white">Quick links</h3>
            <p class="mt-2 text-sm text-slate-600 dark:text-white/70">
              Use these pages to navigate the model and its vocabulary.
            </p>

            <div class="mt-4 flex flex-col gap-2">
              <a
                href="/model"
                class="inline-flex items-center justify-between rounded-2xl border border-slate-200 bg-white/70 px-4 py-3 text-sm font-semibold text-slate-700 hover:bg-white dark:border-white/10 dark:bg-white/10 dark:text-white/80 dark:hover:bg-white/15"
              >
                Model <span class="text-slate-400 dark:text-white/40">→</span>
              </a>
              <a
                href="/glossary"
                class="inline-flex items-center justify-between rounded-2xl border border-slate-200 bg-white/70 px-4 py-3 text-sm font-semibold text-slate-700 hover:bg-white dark:border-white/10 dark:bg-white/10 dark:text-white/80 dark:hover:bg-white/15"
              >
                Glossary <span class="text-slate-400 dark:text-white/40">→</span>
              </a>
              <a
                href="/timeline"
                class="inline-flex items-center justify-between rounded-2xl border border-slate-200 bg-white/70 px-4 py-3 text-sm font-semibold text-slate-700 hover:bg-white dark:border-white/10 dark:bg-white/10 dark:text-white/80 dark:hover:bg-white/15"
              >
                Timeline <span class="text-slate-400 dark:text-white/40">→</span>
              </a>
            </div>
          </div>

          <div class="rounded-3xl border border-slate-200 bg-white/50 p-6 text-sm text-slate-600 shadow-sm backdrop-blur dark:border-white/10 dark:bg-white/5 dark:text-white/70">
            <p class="font-semibold text-slate-900 dark:text-white">Licensing note</p>
            <p class="mt-2">
              The formal paper is published under <strong>{primaryPaper.licenseLabel}</strong>.
              Website content may use a different license (see Imprint).
            </p>
          </div>
        </aside>
      </div>
    </div>
  </section>
</BaseLayout>
